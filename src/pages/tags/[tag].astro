---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';
import type { MarkdownInstance, GetStaticPaths } from 'astro';

// Define o tipo do frontmatter dos posts
type Post = MarkdownInstance<{
  title: string;
  tags: string[];
  description?: string;
}>;

// Gera as pÃ¡ginas de /tags/[tag]
export const getStaticPaths: GetStaticPaths = async () => {
  const allPosts = await Astro.glob('../post/*.md');
    const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
  return uniqueTags.map((tag) => {
  const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(tag));
  return {
    params: { tag },
    props: { posts: filteredPosts },
  };
});
};

// Pega a tag da URL e os posts do props
const { tag } = Astro.params as { tag: string };
const { posts } = Astro.props as { posts: Post[] };


---

<BaseLayout pageTitle={tag}>
  <p>Postagens com a tag {tag}</p>
  <ul>
    {posts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
  </ul>
</BaseLayout>
